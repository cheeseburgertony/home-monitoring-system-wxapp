<view class="contain">
  <!-- 头部部分 -->
  <!-- <view class="header">
    <image src="/images/head.jpg" mode="" />
    <view class="text">{{ title }}</view>
  </view> -->
  <!-- 天气UI部分 -->
  <view class="weather">
    <view class="title">
      <text>{{ weather }}</text>
    </view>
    <view class="content">
      <view class="left">
        <image src="/images/weather/bingbao.png" mode="scaleToFill" />
      </view>
      <view class="right">
        <view class="local">
          <image src="/images/map.png" mode="widthFix" />
          <text>{{ location }}</text>
        </view>
        <view class="temperature">
          <text>{{ temperature }}℃</text>
        </view>
      </view>
    </view>
  </view>

  <!-- MQTT UI部分 -->
  <view class="mqtt">
    <view class="box">
      <text>MQTT服务器</text>
      <text wx:if="{{ !state }}" class="state">未连接</text>
      <text wx:else class="state success">已连接</text>
    </view>
  </view>
</view>