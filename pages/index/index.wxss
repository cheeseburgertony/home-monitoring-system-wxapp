page {
  background-color: #f5f5f5;
}

.header {
  /* margin-top: 20rpx; */
  padding: 15rpx;
  display: flex;
  justify-content: space-evenly;
}

.header image {
  width: 140rpx;
  height: 140rpx;
}

.header .text {
  line-height: 140rpx;
  font-size: 50rpx;
  font-weight: 700;
  color: #585858;
}

.weather {
  margin: 26rpx;
  padding: 26rpx;
  height: 300rpx;
  background-color: #ffffff;
  border-radius: 32rpx;
  box-shadow: 0rpx 8rpx 20rpx rgba(0, 0, 0, 0.3);
}

.weather .title {
  text-align: center;
  font-size: 26rpx;
  color: #5386f7;
}

.weather .content {
  display: flex;
  justify-content: space-around;
}

.weather .left image {
  margin: -20rpx -100rpx 0 -40rpx;
  width: 280rpx;
  height: 280rpx;
}

.weather .right {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.weather .local image {
  width: 20rpx;
}

.weather .local text {
  margin-left: 6rpx;
  color: #585858;
}

.weather .temperature {
  font-size: 100rpx;
  font-weight: 550;
}

.mqtt .box{
  margin: 26rpx;
  height: 120rpx;
  line-height: 120rpx;
  color: #585858;
  font-size: 46rpx;
  font-weight: 520;
  text-align: center;
  background-color: pink;
  background-color: #ffffff;
  border-radius: 32rpx;
  box-shadow: 0rpx 8rpx 20rpx rgba(0, 0, 0, 0.3);
}

.mqtt .box .state{
  margin-left: 40rpx;
  font-size: 36rpx;
  color: red;
}
.mqtt .box .success{
  color: #00b26a;
}