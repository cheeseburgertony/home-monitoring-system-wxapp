page {
  background-color: #f5f5f5;
}

/* 头部 */
.header {
  /* margin-top: 20rpx; */
  padding: 15rpx;
  display: flex;
  justify-content: space-evenly;
}

.header image {
  width: 140rpx;
  height: 140rpx;
}

.header .text {
  line-height: 140rpx;
  font-size: 50rpx;
  font-weight: 700;
  color: #585858;
}

/* 天气 */
.weather {
  margin: 26rpx;
  padding: 26rpx;
  height: 300rpx;
  background-color: #ffffff;
  border-radius: 32rpx;
  box-shadow: 0rpx 8rpx 20rpx rgba(0, 0, 0, 0.3);
}

.weather .title {
  text-align: center;
  font-size: 26rpx;
  color: #5386f7;
}

.weather .content {
  display: flex;
  justify-content: space-around;
}

.weather .left image {
  margin: -20rpx -100rpx 0 -40rpx;
  width: 280rpx;
  height: 280rpx;
}

.weather .right {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.weather .local image {
  width: 20rpx;
}

.weather .local text {
  margin-left: 6rpx;
  color: #585858;
}

.weather .temperature {
  font-size: 100rpx;
  font-weight: 550;
}

/* MQTT */
.mqtt {
  display: flex;
  justify-content: space-between;
  padding: 0 60rpx 0 40rpx;
  margin: 26rpx;
  box-sizing: border-box;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 46rpx;
  background-color: #ffffff;
  border-radius: 32rpx;
  box-shadow: 0rpx 8rpx 20rpx rgba(0, 0, 0, 0.3);
}

/* 弹框 */

.btn-style {
  display: flex;
  justify-content: space-evenly;
}

.connect,
.disconnect {
  margin-top: 26rpx;
  width: 140rpx;
  box-shadow: 4rpx 4rpx 16rpx rgba(0, 0, 0, 0.3);
  border-radius: 100rpx;
}

.subscribe .text,
.publish .text {
  padding: 26rpx 0 6rpx 26rpx;
}

/* 传感器设备 */

.sensor .title,
.device .title {
  margin: 20rpx 0 20rpx 30rpx;
  font-size: 40rpx;
  font-weight: 700;
}